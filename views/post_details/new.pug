doctype html
html
	include ../includes/head
	body
		include ../includes/header
		div(class='ui grid container')
			div(class='ui container')
				h2(class='ui header')
					i(class='plus circle icon')
					div(class='content') Add Post Details
						div(class='sub header') Add post details form.
				div(class='ui divider')
				p #{post._id}
				form(class='ui form' action='/posts/:id/post_details/show' method='post')
					div(class='field')
						label Content Type:
						div(class='ui selection dropdown')
							input(name='content' type='hidden')
							i(class='dropdown icon')
							div(class='default text') Select one...
							div(class='menu')
								each content_type in content_types
									div(class='item' data-value=content_type._id) #{content_type.description}
					div(class='field')
						label(for='content') Content:
						textarea(id='content' name='content' placeholder='Enter content here...')
					div(class='field')
						label(for='sequence') Sequence:
						input(type='number' id='sequence' name='sequence' value=count + 1)
					button(class='ui primary button' type='submit') Save
				div(class='ui hidden divider')
				a(href='/posts')
					i(class='arrow circle left icon')
					span Back
		include ../includes/scripts
		include ../includes/footer